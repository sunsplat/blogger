<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name"  %>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Your Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
	  <%= f.label :tag_list %><br />
	  <%= f.text_field :tag_list %>
	</p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>